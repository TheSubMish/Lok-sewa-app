<%- include("partials/header") -%>

    <div class="contact">
        <form action="/contact" method="post">
            <div class="contact-input">
                <input type="text" name="user" id="user" placeholder="Enter Your Name">
            <input type="text" name="email" id="email" placeholder="Enter Your Email">
            </div>       
            <div class="contact-message">
               <textarea name="message" id="message" cols="30" rows="10" placeholder="Enter Your Meassage"></textarea> 
            </div>
            <div>
                <button type="submit" class="sub-btn">Send Message</button>
            </div>
        </form>
    </div>

<%- include("partials/footer") -%>